{
  "name": "@umijs/plugin-qiankun",
  "version": "1.0.0",
  "description": "umi plugin for qiankun",
  "repository": "umijs/umi-plugin-qiankun",
  "keywords": [
    "umi-plugin",
    "micro frontend",
    "qiankun"
  ],
  "authors": [
    {
      "name": "chencheng",
      "email": "sorrycc@gmail.com"
    }
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "npm run start:master & npm run start:app1 & npm run start:app2",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "npm run build && np --no-cleanup --yolo --no-publish",
    "build": "father-build",
    "start:master": "cd examples/master && umi dev",
    "start:app1": "cd examples/app1 && umi dev",
    "start:app2": "cd examples/app2 && umi dev",
    "test": "echo \"test\""
  },
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "qiankun": "^1.1.1"
  },
  "devDependencies": {
    "@types/react-dom": "^16.8.4",
    "coveralls": "3",
    "father-build": "^1.2.0",
    "husky": "1",
    "lint-staged": "8",
    "mockjs": "^1.0.1-beta3",
    "np": "5",
    "prettier": "1",
    "umi": "^2.8.3",
    "umi-plugin-react": "^1.9.13",
    "umi-test": "1",
    "umi-types": "^0.3.3",
    "umi-request": "^1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "lib",
    "master.js",
    "slave.js"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
